{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noResolve": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "strictNullChecks": false,
        "allowJs": true,
        "pretty": true,
        "outDir": "./server"
    },
    "include": [
        "./*.ts",
        "./*.html",
        "./router/*",
        "./controller/*"
    ]
}