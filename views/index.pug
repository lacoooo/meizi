    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    link(rel="stylesheet", href=`/css/index.css`)
    link(rel="stylesheet", href=`/css/spectre-icons.min.css`)
    link(rel='stylesheet', href=`https://cdn.bootcss.com/spectre.css/0.5.1/spectre.min.css`)
  body
    //- <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5MHDZB2" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    .wrap#app(@click='cancel')
      .logo 搞笑美女网
      .top_bar
        if url == 'gif'
          span 动图一 <span class='half'>></span> #{ page }
        else if url == 'gif2'
          span 动图二 <span class='half'>></span> #{ page }
        else if url == 'pic'
          span 美女图 <span class='half'>></span> #{ page }
        <div @click.stop='showMenu' class="accordion">
          .more 更多
          <i class="icon icon-arrow-down mr-1"></i>
        </div>
        .to_list(v-if='menuFlag' style='display: none')
          a(href=`/gif/1`) 动图一
          a(href=`/gif2/1`) 动图二
          a(href=`/pic/1`) 美女图
      each item in data
        .content
          .title #{ item.title }
          img.mmgif(src=`${ item.origin }`)
      .to_page_wrap
        .to_page.btn-group
          if page > 1
            a.btn(href=`/${ url }/${ page * 1 - 1 }`) 上一页
          a.btn(href=`/${ url }/${ page * 1 + 1 }`) 下一页
      .current
        span 去第
        input(v-model='toPageNum')
        span 页
        span.button.confirm(@click='toPage()') 确定
        span#url(style='display: none') #{ url }
        span.button.confirm(@click='toPage("random")') 随机
      .footer - enjoygirl.club -
    script(src='https://cdn.bootcss.com/vue/2.5.17-beta.0/vue.min.js')
    script(src="/js/index.js")
